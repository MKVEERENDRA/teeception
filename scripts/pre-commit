#!/bin/sh\n\n# Build contracts\ncd contracts && scarb build --release\nif [ $? -ne 0 ]; then\n    echo "Error: Contract build failed"\n    exit 1\nfi\ncd ..\n\n# Make sure the sync script is executable\nchmod +x scripts/sync-abis.sh\n\n# Sync ABIs\n./scripts/sync-abis.sh\nif [ $? -ne 0 ]; then\n    echo "Error: ABI sync failed"\n    exit 1\nfi\n\n# Check if there are any changes in the ABI files\ngit diff --exit-code extension/src/abis/\nif [ $? -ne 0 ]; then\n    echo "Error: ABI files are out of sync with contracts. Please commit the updated ABIs."\n    exit 1\nfi
